<h2><%= gettext "Welcome %{user}", user: @user.name %></h2>


<%= form_for  @conn, image_path(@conn, :upload), [as: :image, multipart: true], fn f -> %>
  <div class="form-group">
    <label>Photo</label>
    <%= file_input f, :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
